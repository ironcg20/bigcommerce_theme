{"components/common/paginator":"<nav class=\"pagination\" aria-label=\"pagination\">\n    <ul class=\"pagination-list\">\n        {{#if previous}}\n            <li class=\"pagination-item pagination-item--previous\">\n                <a class=\"pagination-link\"\n                   href=\"{{previous}}\"\n                   {{#unless reload}}data-faceted-search-facet{{/unless}}\n                   aria-label=\"{{lang 'common.previous'}}\"\n                >\n                    <i class=\"icon\" aria-hidden=\"true\">\n                        <svg>\n                            <use xmlns:xlink=\"http://www.w3.org/1999/xlink\" xlink:href=\"#icon-chevron-left\"></use>\n                        </svg>\n                    </i>\n                    {{lang 'common.previous'}}\n                </a>\n            </li>\n        {{/if}}\n        {{#each links}}\n            <li class=\"pagination-item {{#if this.number '==' ../current}}pagination-item--current{{/if}}\">\n                <a class=\"pagination-link\"\n                   href=\"{{this.url}}\"\n                   {{#unless reload}}data-faceted-search-facet{{/unless}}\n                   {{#if this.number '==' ../current}}\n                   aria-current=\"page\"\n                   data-pagination-current-page-link\n                   {{/if}}\n                   aria-label=\"{{lang 'common.paginator.page_of' current=this.number total=../links.length}}\"\n                >\n                    {{this.number}}\n                </a>\n            </li>\n        {{/each}}\n\n        {{#if next}}\n            <li class=\"pagination-item pagination-item--next\">\n                <a class=\"pagination-link\"\n                   href=\"{{next}}\"\n                   {{#unless reload}}data-faceted-search-facet{{/unless}}\n                   aria-label=\"{{lang 'common.next'}}\"\n                >\n                    {{lang 'common.next'}}\n                    <i class=\"icon\" aria-hidden=\"true\">\n                        <svg>\n                            <use xmlns:xlink=\"http://www.w3.org/1999/xlink\" xlink:href=\"#icon-chevron-right\"></use>\n                        </svg>\n                    </i>\n                </a>\n            </li>\n        {{/if}}\n    </ul>\n</nav>\n","components/search/content-listing":"{{#if content_results}}\n    {{> components/search/content-sort-box sort=pagination.content_results.sort}}\n    <ul>\n        {{#each content_results}}\n            <strong><a href=\"{{url}}\">{{{title}}}</a></strong>({{type}})\n            <p>{{{content}}}</p>\n        {{/each}}\n    </ul>\n    {{> components/common/paginator pagination.content_results reload=true}}\n{{/if}}\n","components/search/content-sort-box":"<form class=\"actionBar\" method=\"get\" data-sort-by=\"content\">\n    <fieldset class=\"form-fieldset actionBar-section\">\n        <div class=\"form-field\">\n            <label class=\"form-label\" for=\"sort\">{{lang 'common.sorter.sort_by'}}</label>\n            <select class=\"form-select form-select--small\" name=\"sort\" id=\"sort\">\n                <option value=\"relevance\" {{#if sort '==' 'relevance'}}selected{{/if}}>{{lang 'common.sorter.relevance'}}</option>\n                <option value=\"alphaasc\" {{#if sort '==' 'alphaasc'}}selected{{/if}}>{{lang 'common.sorter.alpha_asc'}}</option>\n                <option value=\"alphadesc\" {{#if sort '==' 'alphadesc'}}selected{{/if}}>{{lang 'common.sorter.alpha_desc'}}</option>\n            </select>\n        </div>\n    </fieldset>\n</form>\n"}
