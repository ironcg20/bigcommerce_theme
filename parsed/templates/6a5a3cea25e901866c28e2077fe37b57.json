{"components/common/forms/text":"<div class=\"form-field\" id=\"{{id}}\" data-validation=\"{{validation}}\" {{#if private_id}}data-type=\"{{private_id}}\"{{/if}}>\n    <label class=\"form-label\" for=\"{{id}}_input\">{{label}}\n        {{#if required}}<small>{{lang 'common.required' }}</small>{{/if}}\n    </label>\n    <input type=\"text\"\n           name=\"{{name}}\"\n           id=\"{{id}}_input\"\n           class=\"form-input\"\n           data-label=\"{{label}}\"\n           data-input\n           aria-required=\"{{required}}\"\n           {{#if value}} value=\"{{value}}\"{{/if}}\n           {{#if maxlength}}maxlength=\"{{maxlength}}\"{{/if}}\n           {{#if placeholder}} placeholder=\"{{placeholder}}\"{{/if}}\n           {{#if private_id}}data-field-type=\"{{private_id}}\"{{/if}}\n    >\n</div>\n"}
