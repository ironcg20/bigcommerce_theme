{"components/common/requireness-msg":"<small {{#if required}}class=\"is-required\"{{/if}}>\n    {{#if required}}\n    ({{lang 'common.required'}})\n    {{else}}\n    {{lang 'common.optional'}}\n    {{/if}}\n</small>\n","components/products/options/textarea":"<div class=\"form-field\" data-product-attribute=\"textarea\">\n    <label class=\"form-label form-label--alternate form-label--inlineSmall\" for=\"attribute_textarea_{{id}}\">\n        {{display_name}}:\n\n        {{> components/common/requireness-msg}}\n    </label>\n\n    <textarea class=\"form-input\" id=\"attribute_textarea_{{id}}\" name=\"attribute[{{id}}]\" {{#if required}}required{{/if}} {{#if max_length}}maxlength={{max_length}}{{/if}}>{{prefill}}</textarea>\n</div>\n"}
